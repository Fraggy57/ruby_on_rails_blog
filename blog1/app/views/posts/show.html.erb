<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>

<% if @post.comments.length > 0 %>
	<h2>Comments</h2>
	<%= form_tag destroyComments_path, method: :delete do %>
    	<%= render @post.comments %>
    	<%= submit_tag "Delete selected comments" , :confirm => 'Are you sure?'%>
<% end %>
<% end %>

<% if !@post.post_closed %>
  <h3>Add a comment:</h3>
  <%= render "comments/form" %>
<% else %>
  <h3>Post closed</h3>
<% end %>

<br />

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
